<resources>

    <style name="PreferenceFragmentStyle" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/fr_preference</item>
    </style>

    <style name="ImageDetailToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <style name="CircleCheckBox" parent="DefaultCircleCheckBoxStyle">
        <item name="normalColor">@android:color/transparent</item>
        <item name="checkedColor">@color/black</item>
        <item name="outlineColor">#A5A5A5</item>
        <item name="outlineMargin">false</item>
    </style>

    <style name="ImageCheckBox" parent="CircleCheckBox">
        <item name="normalColor">#55000000</item>
        <item name="checkedColor">#FFFFFF</item>
        <item name="outlineColor">#FFFFFF</item>
        <item name="outlineMargin">true</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">@dimen/image_checkbox_size</item>
        <item name="android:layout_height">@dimen/image_checkbox_size</item>
        <item name="android:layout_marginTop">@dimen/image_checkbox_margin</item>
        <item name="android:layout_marginStart">@dimen/image_checkbox_margin</item>
        <item name="android:checked">false</item>
    </style>

    <style name="ImageDetailIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">?attr/iconColor</item>
    </style>

    <style name="ImageDetailAttr">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_view_primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="text_view_secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Widget" />

    <style name="Widget.ListItem">
        <item name="android:minHeight">?attr/listPreferredItemHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">?attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?attr/listPreferredItemPaddingEnd</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

</resources>
