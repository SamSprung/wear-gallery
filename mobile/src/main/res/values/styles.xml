<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_view_btn_simple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="text_view_btn_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="text_view_btn" parent="text_view_btn_base">
        <item name="android:background">@drawable/shape_button_bg</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--分割线-->
    <style name="line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--容器-->
    <style name="layout_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:background">@drawable/layout_content_selecter</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="text_view_left" parent="text_view">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_view_key</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="text_view_right" parent="text_view">
        <item name="android:textColor">@color/text_view_value</item>
    </style>

    <style name="view_right">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
