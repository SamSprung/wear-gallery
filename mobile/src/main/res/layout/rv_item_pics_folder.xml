<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_icon"
                android:ellipsize="end"
                android:maxLength="20"
                android:singleLine="true"
                android:text="DIMC"
                android:textColor="#353535"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_pic_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/tv_file_name"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ico_arrows_right"
                android:contentDescription="@null" />


        </RelativeLayout>

        <!--选中遮挡浮层-->
        <ImageView
            android:id="@+id/iv_forgound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/half_trans_bg1"
            android:contentDescription="@null"
            android:visibility="gone" />

        <!--选择框，放在最底部防止被浮层遮挡-->
        <TextView
            android:id="@+id/ctv_check"
            android:layout_width="@dimen/photo_select_preview"
            android:layout_height="@dimen/photo_select_preview"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/photo_select_oval_selector"
            android:clickable="false"
            android:enabled="true"
            android:gravity="center"
            android:visibility="visible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>