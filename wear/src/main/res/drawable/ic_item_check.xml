<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/on"
        android:drawable="@drawable/ic_check_on"
        android:state_checked="true" />

    <item
        android:id="@id/off"
        android:drawable="@drawable/ic_check_off" />

    <transition
        android:drawable="@drawable/ic_check_anim_to_on"
        android:fromId="@id/off"
        android:toId="@id/on" />

    <transition
        android:drawable="@drawable/ic_check_anim_to_off"
        android:fromId="@id/on"
        android:toId="@id/off" />
</animated-selector>