<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:gravity="center"
        android:paddingTop="@dimen/title_padding_top"
        android:paddingBottom="@dimen/title_padding_bottom"
        android:text="@string/drawer_explore" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="36dp">

            <LinearLayout
                android:id="@+id/layoutLanTransfer"
                style="@style/item_container"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_lan_transfer"
                    android:textColor="@color/text_main" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAlwaysOn"
                style="@style/item_container"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_always_on"
                    android:textColor="@color/text_main" />

                <ticwear.design.widget.SimpleSwitch
                    android:id="@+id/ssAlwaysOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/tic_ic_switch" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMaxBrightness"
                style="@style/item_container"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_max_brightness"
                    android:textColor="@color/text_main" />

                <ticwear.design.widget.SimpleSwitch
                    android:id="@+id/ssMaxBrightness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/tic_ic_switch" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDelCache"
                style="@style/item_container"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    style="@style/iv_icon"
                    android:src="@drawable/ic_settings_del_cache"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/settings_del_cache"
                    android:textColor="@color/text_main" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDelLocalImage"
                style="@style/item_container"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    style="@style/iv_icon"
                    android:src="@drawable/ic_settings_del_local_image"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/settings_del_local_image"
                    android:textColor="@color/text_main" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAbout"
                style="@style/item_container"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    style="@style/iv_icon"
                    android:src="@drawable/ic_settings_about"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/settings_about"
                    android:textColor="@color/text_main" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>