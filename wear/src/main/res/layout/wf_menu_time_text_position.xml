<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cc.chenhe.weargallery.view.LongPressImageView
        android:id="@+id/up"
        style="@style/Widget.ImageView.Button.WatchFaceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_wf_pos_up"
        tools:ignore="ContentDescription" />

    <cc.chenhe.weargallery.view.LongPressImageView
        android:id="@+id/down"
        style="@style/Widget.ImageView.Button.WatchFaceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_wf_pos_down"
        tools:ignore="ContentDescription" />

    <cc.chenhe.weargallery.view.LongPressImageView
        android:id="@+id/left"
        style="@style/Widget.ImageView.Button.WatchFaceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_wf_pos_left"
        tools:ignore="ContentDescription" />

    <cc.chenhe.weargallery.view.LongPressImageView
        android:id="@+id/right"
        style="@style/Widget.ImageView.Button.WatchFaceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_wf_pos_right"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>